<div class="container" style="cursor: pointer;">
    <a href="/voiture/<%= voiture.id_voiture %>" class="btn btn-link p-0" style="text-decoration: none;">
        <div class="card rounded-3 shadow-sm mb-5 bg-body rounded" style="height: 150px;">
            <div class="row h-100">
                <div class="col-7 d-flex justify-content-center text-center h-100">
                    <img src="/images/<%= voiture.image %>" class="rounded-4 mt-2" style="width: 90%;">
                </div>
                <div class="col-4 text-center h-100"
                    style="display: flex; align-items: center; justify-content: center; flex-direction: column;">
                    <div class="row">
                        <div class="col text-center vertical-align">
                            <div>
                                <%= voiture.marque %>
                            </div>
                            <div>
                                <%= voiture.modele %>
                            </div>
                            <div>
                                <%= voiture.annee %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row h-100">
                <div class="d-flex justify-content-center align-items-center ">
                    <h4>
                        <%= voiture.prix.toLocaleString() %> $
                    </h4>
                </div>
            </div>
        </div>
    </a>
</div>