<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3">
            <div class="d-flex justify-content-center mt-3">
                <img width="200px" src="../images/Concessionnaire_Rubious-removebg-preview.png" alt="Logo">
            </div>
            <div class="d-flex align-items-center mt-5 h-50 justify-content-center">
                <h3 class="text-black-50" id="messageBonjour"></h3>
            </div>
        </div>
        <div class="col-md-5">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Votre Profil</h4>
                </div>
                <div class="row mt-2">
                    <form action="/profile/submit_profil" method="post" id="profilForm">
                        <div class="col-md-6">
                            <label for="nom">Nom</label>
                            <input id="nom" type="text" class="form-control" placeholder="Nom" name="nom">
                        </div>
                        <div class="col-md-6">
                            <label for="prenom">Prénom</label>
                            <input id="prenom" type="text" class="form-control" placeholder="Prénom" name="prenom">
                        </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <label for="courriel">Courriel</label>
                        <input id="courriel" type="text" class="form-control" placeholder="Entrez votre courriel"
                            name="courriel">
                    </div>
                    <div class="col-md-12">
                        <label for="telephone">Téléphone</label>
                        <input id="telephone" type="tel" class="form-control"
                            placeholder="Entrez votre numéro de téléphone" name="telephone">
                    </div>
                    <div class="col-md-12">
                        <label for="adresse">Adresse</label>
                        <input id="adresse" type="text" class="form-control" placeholder="Entrez votre adresse"
                            name="adresse">
                    </div>
                    <div class="col-md-12">
                        <label for="motDePasse">Mot de passe</label>
                        <input id="motDePasse" type="password" class="form-control"
                            placeholder="Entrez votre mot de passe" name="motDePasse">
                        <div class="checkbox">
                            <input type="checkbox" id="showPasswordCheckbox" onchange="afficherMotDePasse()">
                            <label for="showPasswordCheckbox" class="label" >Afficher mot de passe</label>
                        </div>
                    </div>
                </div>

                <div class="mt-5 text-center">
                    <button class="btn btn-primary profile-button" type="submit">Enregistrer</button>
                </div>

                <input id="userId" type="hidden" class="form-control" placeholder="Entrez votre mot de passe"
                    name="userId1">
                    <p id="userFullName"></p>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {

        const userNom = sessionStorage.getItem('userNom');
        const userPrenom = sessionStorage.getItem('userPrenom');
        const userCourriel = sessionStorage.getItem('userCourriel');
        const userTelephone = sessionStorage.getItem('userTelephone');
        const userAdresse = sessionStorage.getItem('userAdresse');
        const userMotDePasse = sessionStorage.getItem('userMotDePasse');
        const userId = sessionStorage.getItem('userId');
        const fullName = sessionStorage.getItem('userFullName');
        document.getElementById('nom').value = userNom;
        document.getElementById('prenom').value = userPrenom;
        document.getElementById('courriel').value = userCourriel;
        document.getElementById('telephone').value = userTelephone;
        document.getElementById('adresse').value = userAdresse;
        document.getElementById('motDePasse').value = userMotDePasse;
        document.getElementById('userId').value = userId;
        document.getElementById('messageBonjour').innerText = "Bonjour \n" + userPrenom + " " + userNom + "!";

        document.getElementById("profilForm").addEventListener("submit", function (event) {

        // Mettre à jour les valeurs dans sessionStorage
        sessionStorage.setItem('userNom', document.getElementById('nom').value);
        sessionStorage.setItem('userPrenom', document.getElementById('prenom').value);
        sessionStorage.setItem('userFullName',document.getElementById('prenom').value + " " + document.getElementById('nom').value);
        sessionStorage.setItem('userCourriel', document.getElementById('courriel').value);
        sessionStorage.setItem('userTelephone', document.getElementById('telephone').value);
        sessionStorage.setItem('userAdresse', document.getElementById('adresse').value);
        sessionStorage.setItem('userMotDePasse', document.getElementById('motDePasse').value);
        sessionStorage.setItem('userId', document.getElementById('userId').value);
        const newPrenom = document.getElementById('prenom').value;
        const newNom = document.getElementById('nom').value;
        const newCourriel = document.getElementById('courriel').value;
        const newTelephone = document.getElementById('telephone').value;
        const newAdresse = document.getElementById('adresse').value;
        const newMotDePasse = document.getElementById('motDePasse').value;
        if (newPrenom === '' || newNom === '' || newCourriel === '' || newTelephone === '' || newAdresse === '' || newMotDePasse === '') {
            alert('Veuillez remplir tous les champs.');
            return; // Arrêter la soumission du formulaire si des champs sont vides
        }
        // Recharger la page pour afficher les nouvelles informations
        location.reload();
    
    
    });

});
    function afficherMotDePasse() {
        var x = document.getElementById("motDePasse");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>