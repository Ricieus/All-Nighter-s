<style>
    .content {
        padding-top: 15vh;
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .containerContact {
        height: 36.4vh;
        margin: 10%;
    }
</style>

    <div class="containerPaiement" id="carteCredit">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <form>
                <div class="groupe-formulaire">
                    <h1>1. Addresse de livraison</h1>
                    <label for="Addresse">Addresse de maison</label>
                    <input type="text" class="form-control" id="Addresse" placeholder="Addresse">
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="groupe-formulaire">
                            <label for="ville">Ville</label>
                            <input type="text" class="form-control" id="ville" placeholder="ville">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="groupe-formulaire">
                            <label for="zip">Code Postal</label>
                            <input type="text" class="form-control" id="zip" placeholder="Code Postal">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="containerPaiement" id="modePayment">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <form>
                <div class="groupe-formulaire">
                    <h1>2. Choisissez un mode de paiement</h1>
                </div>
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-primary">
                        <input type="radio" name="options" id="creditCard" autocomplete="off" checked> Carte de crédit
                    </label>
                    <label class="btn btn-primary">
                        <input type="radio" name="options" id="paypal" autocomplete="off"> PayPal
                    </label>
                    <label class="btn btn-primary">
                        <input type="radio" name="options" id="googlePay" autocomplete="off"> GooglePay
                    </label>
                </div>
            </form>
        </div>
    </div>

    
    <div class="containerPaiement" id="carteCredit">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <form>
                <div class="groupe-formulaire">
                    <h1>3. Choisissez un moyen de paiement</h1>
                    <label for="numeroCarte">Numéro de votre carte</label>
                    <input type="number" class="form-control" id="numeroCarte" placeholder="Numéro de votre carte">
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="groupe-formulaire">
                            <label for="carteCvc">Carte CVC</label>
                            <input type="number" class="form-control" id="carteCvc" placeholder="Numéro CVC">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="groupe-formulaire">
                            <label for="annee">Année</label>
                            <input type="number" class="form-control" id="annee" placeholder="Année">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="groupe-formulaire">
                            <label for="mois">Mois</label>
                            <input type="number" class="form-control" id="mois" placeholder="Mois">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="groupe-formulaire">
                            <label for="jour">Jour</label>
                            <input type="number" class="form-control" id="jour" placeholder="Jour">
                        </div>
                    </div>
                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary">Continuer</button>
                </div>
            </form>
        </div>
    </div>
</div>






