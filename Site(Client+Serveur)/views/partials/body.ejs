                                        <option data-tokens="modele2">Modele2</option>
                                        <option data-tokens="modele3">Modele3</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="centreColonne">
                                    <select class="selectpicker form-control" title="Veuillez choisir le prix">
