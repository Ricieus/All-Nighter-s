        <form class="form-vertical">
            <div class="d-flex justify-content-center">
                <div class="m-2">
                    <label>Courriel:</label>
                    <input type="email" class="form-control" placeholder="exemple@bdeb.qc.ca">

                </div>

                <div class="m-2">
                    <label>Raison de contact:</label>
                    <select class="selectpicker form-control" multiple data-max-options="1" title="Veuillez choisir la raison de contact">
                        <option value="question">Je veux demander une question</option>
                        <option value="postuler">Je veux réserver un essai routier</option>
                        <option value="plainte">Je veux me plaindre</option>
                        <option value="commentaire">Je veux laisser un commentaire</option>
                    </select>
                </div>
                <div class="m-2">
                    <label>Choisir un rendez-vous:</label>
                    <input type="date" class="form-control">
                </div>
                <div class="m-2">
                    <label>Message supplémentaire:</label>
                    <textarea id="msg" class="form-control" rows="4"></textarea>
                </div>
                <div class="m-5">
                    <button class="btn btn-primary">
                        Envoyer
                    </button>
                </div>
            </div>
