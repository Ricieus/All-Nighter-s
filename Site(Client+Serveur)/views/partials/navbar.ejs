<script>
    var nav = document.querySelector('nav');

    window.addEventListener('scroll', function () {
        if (window.pageYOffset > 100) {
            nav.classList.add('bg-body-secondary', 'shadow');
        } else {
            nav.classList.remove('bg-body-secondary', 'shadow');
        }
    });

    function gestionDeconnexion() {
        const userFullName = sessionStorage.getItem('userFullName');
        const btnDeconnexion = document.getElementById('deconnexionBtn');
        const connexionBtn = document.getElementById('connexionBtn');

        if (userFullName) {
            document.getElementById('userFullName').innerText = userFullName;
            btnDeconnexion.disabled = false; // Activer le bouton de déconnexion
            connexionBtn.style.display = 'none'; // Masquer le bouton de connexion
        } else {
            document.getElementById('userFullName').innerText = ''; // Effacer le nom d'utilisateur affiché
            btnDeconnexion.disabled = true; // Désactiver le bouton de déconnexion
            connexionBtn.style.display = 'block'; // Afficher le bouton de connexion
        }
    }

    document.addEventListener('DOMContentLoaded', function () {
        gestionDeconnexion();

        document.getElementById('dropdownMenuButton').addEventListener('click', function () {
            const dropdownMenu = document.getElementById('dropdownMenu');
            dropdownMenu.classList.toggle('show');
            const isDropdownVisible = dropdownMenu.classList.contains('show');
            document.getElementById('deconnexionBtn').disabled = !isDropdownVisible;
        });

        document.getElementById('deconnexionBtn').addEventListener('click', function () {
            sessionStorage.removeItem('userFullName');
            window.location.href = '/pages/connexion'; 
        });

        // Sauvegarder le nom du profil dans sessionStorage
        document.getElementById('userFullName').addEventListener('input', function () {
            const newName = document.getElementById('userFullName').innerText;
            sessionStorage.setItem('userFullName', newName);
        });
    });
</script>
